<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <style>
        body{
            background-color:#c1dfeb;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>URL Shortener</h1>
            </div>
        </div>
        <form action="/shortUrls" method="POST">
            <div class="row">
                <div class="input-group mb-3">
                    <input type="text" name="fullUrl" id="fullUrl" class="form-control" placeholder="Paste your long URL"
                        aria-label="Recipient's username" aria-describedby="button-addon2">
                    <div class="input-group-append">
                        <input type="submit" class="btn btn-danger" value="Submit">
                    </div>
                </div>
            </div>
        </form>

        <div class="row">
            <% shortUrls.forEach(shortUrl => { %>
            <div class="col-lg-3">
                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                    <div class="card-header">Short URL</div>
                    <div class="card-body text-secondary">
                        <h6 class="card-title">
                            <a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a>
                        </h6>
                        <p class="card-text"><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></p>
                        <a href="/delete/<%= shortUrl.id %>" class="btn btn-sm btn-secondary">Remove</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</body>

</html>